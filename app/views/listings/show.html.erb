
<div class="row">
  <div class="col-md-4">
    <div class="thumbnail">
      <%= image_tag @listing.image.url(:medium) %>
    </div>
  </div>
  <div class="col-md-8">
      <h3><%= link_to @listing.category.name, @listing.category %></h3>
      <h3><%= @listing.name %></h3><hr>
      <p><%= @listing.description %></p><hr>
      <p><%= number_to_currency(@listing.price, :unit => "â‚¬") %></p>
  </div><br>
  
</div>
<div class="col-md-4"></div>
<div class="col-md-8">

<%= link_to "Add to cart", add_cart_path, method: :post, class: "btn btn-primary" %> 
